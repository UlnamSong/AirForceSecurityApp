<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity" android:background="@color/colorPrimary">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp" app:srcCompat="@drawable/aircraft" android:id="@+id/ivLogo"
                android:contentDescription="@string/cd_logo"/>
        <TextView
                android:text="@string/app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvTitle"
                android:gravity="center_vertical|center_horizontal" android:textSize="32dp" android:textStyle="bold"
                android:textColor="@android:color/white" android:layout_marginTop="10dp"/>
        <TextView
                android:text="@string/app_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvSubTitle"
                android:gravity="center_vertical|center_horizontal" android:textSize="20dp"
                android:textColor="@android:color/white"/>
        <TextView
                android:text="@string/msg_wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvWait" android:textColor="@android:color/white"
                android:gravity="center_horizontal" android:layout_marginTop="100dp" android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>